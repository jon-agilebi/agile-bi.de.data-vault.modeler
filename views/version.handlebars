<div data-ng-app="vault">
	<div data-ng-controller="VaultController">
		<div class="row row-offcanvas row-offcanvas-right">
			<div class="col-xs-12 col-sm-12">
    			<div class="row">
	        		<div class="col-xs-12 col-sm-12 sidebar-offcanvas" id="sidebar">
	        			<div class="panel panel-default">
	        				<div class="panel-heading clearfix"><div class="panel-title">Version Overview
	        					<button type="button" class="btn btn-default pull-right" data-ng-click="downloadVersion()"><span class="glyphicon glyphicon-download" aria-hidden="true"></span></button>
	        					<button type="button" class="btn btn-default pull-right" data-toggle="modal" data-target="#versionNameModal"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
	        				</div>
	        			</div>
	        			<div class="panel-body">
	        				<div class="list-group" id="versionOverview">
	            				<a href="#" class="list-group-item versionHeader" data-ng-repeat="v in actualModel.versions" data-ng-click="selectVersion(v)" version=({(v.name)})>
	            				 <h4 class="list-group-item-heading">({(v.name)})</h4><span class="badge">({(v.artefacts.length)})</span>
	            				 <p class="list-group-item-text">creation date: ({(v.timestamp)})</p>
	            				</a>
	          				</div>
	        			</div>
	        		</div>
	        	</div>
          	</div>
        </div>
		<div class="modal fade" id="versionNameModal" tabindex="-1" role="dialog">
	  		<div class="modal-dialog"">
	    		<div class="modal-content">
	      			<div class="modal-header">
	        			<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        			<h4 class="modal-title">Create a new version</h4>
	      			</div>
	      			<div class="modal-body">
	        			<form>
						  <div class="form-group">
						    <label for="versionName">Name</label>
						    <input type="text" class="form-control" id="versionName" data-ng-model="versionName" placeholder="Version Name" data-ng-blur="checkVersion()">
						  </div>
						</form>
						<div class="alert alert-danger hidden" role="alert" id = "alertVersionName">Text comes here.</div>
	      			</div>
	      			<div class="modal-footer">
	        			<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
	        			<button type="button" class="btn btn-default" data-dismiss="modal" id="saveVersionButton" data-ng-click="addVersion()">Save</button>
	      			</div>
	    		</div>
	  		</div>
		</div>
	</div>
</div>